{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://itisfoundation.github.io/hornet-manifest-spec/schema/cad_manifest.schema.json",
    "title": "HORNET CAD Manifest",
    "schema_version": "0.1.0",
    "description": "Schema for describing structured collections of CAD components and their file representations in external repositories.",
    "type": "object",
    "required": [
        "repository",
        "components"
    ],
    "properties": {
        "repository": {
            "type": "string",
            "description": "The URL of the repository containing the CAD files.",
            "format": "uri"
        },
        "components": {
            "type": "array",
            "description": "Top-level components in this CAD project.",
            "minItems": 1,
            "items": {
                "$ref": "#/$defs/component"
            }
        }
    },
    "$defs": {
        "component": {
            "discriminator": {
                "propertyName": "type",
                "mapping": {
                    "assembly": "#/$defs/assembly",
                    "part": "#/$defs/part"
                }
            },
            "oneOf": [
                {
                    "$ref": "#/$defs/assembly"
                },
                {
                    "$ref": "#/$defs/part"
                }
            ]
        },
        "assembly": {
            "type": "object",
            "required": [
                "id",
                "type",
                "description",
                "files",
                "components"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier for the component",
                    "$comment": "Must be unique across the entire manifest, but JSON Schema cannot enforce this."
                },
                "type": {
                    "const": "assembly"
                },
                "description": {
                    "type": "string"
                },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "path",
                            "type"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "solidworks_part",
                                    "solidworks_assembly",
                                    "step_export"
                                ]
                            }
                        }
                    }
                },
                "components": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/component"
                    }
                }
            }
        },
        "part": {
            "type": "object",
            "required": [
                "name",
                "type",
                "description",
                "files"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "const": "part"
                },
                "description": {
                    "type": "string"
                },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "path",
                            "type"
                        ],
                        "properties": {
                            "path": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "solidworks_part",
                                    "solidworks_assembly",
                                    "step_export"
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}
